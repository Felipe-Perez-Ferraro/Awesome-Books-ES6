{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "extends": ["airbnb-base"],
  "rules": {
    "no-shadow": "off",
    "no-param-reassign": "off",
    "eol-last": "off",
    "import/extensions": [ 1, {
      "js": "always", "json": "always"
    }],
    "no-sequences": ["error", { "allowInParentheses": true }],
    "class-methods-use-this": ["error", { "exceptMethods": ["addBook", "removeBook"] }]
  },
  "ignorePatterns": [
    "dist/",
    "build/"
  ]
}